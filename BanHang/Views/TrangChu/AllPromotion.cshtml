
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@using Model.EF
@model List<SanPham>
<div class="row">
    <div class="col-sm-12 p-0">
        <div class="category-title pt-1 text-center">
            <h5 class="text-uppercase pl-3">Sản phẩm khuyến mãi <i class="fas fa-shopping-basket"></i></i></h5>
        </div>
    </div>
</div>


<div class="row mt-3">
    <div class="col-sm-12 products">
        <div class="row flex-wrap">
            @foreach (var item in Model)
            {
                <div href="#" class="card col-sm-2 p-0 product border rounded-0">
                    <a href="@Url.Action("Details", "TrangChu", new { id = item.MaSP })" class="text-decoration-none">
                        <img class="card-img-top" src="~/Image/SanPham/@item.HinhAnh" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@item.TenSP</h5>
                        </div>
                    </a>
                    <div class="mt-2 pt-1">
                        <div class="ml-3 mb-3 text-dark font-weight-bold price">@String.Format("{0:0,0}", item.GiaBan) ₫</div>
                        <div class="ml-3 text-danger font-weight-bold price">@String.Format("{0:0,0}", item.GiaMoi) ₫ <div class="line"></div></div>
                        <button class="cart-plus text-warning bg-white border-0"><i class="fas fa-cart-plus"></i></button>
                    </div>

                    <a href="@Url.Action("Details", "TrangChu", new { id = item.MaSP })" class="btn btn-dark btn-more-details">Xem chi tiết <i class="fas fa-info-circle"></i></a>
                </div>
            }
        </div>
    </div>
</div>

