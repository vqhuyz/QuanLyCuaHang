@model Model.EF.NhanVien

@{
    Layout = null;
}


@using (Html.BeginForm("CapNhat", "NhanVien", FormMethod.Post))
{

    <div class="modal-header bg-maroon">
        <h4 class="modal-title">Cập nhật thông tin</h4>
    </div>

    <div class="modal-body form-horizontal">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaNV)

        <div class="form-group">
            @Html.LabelFor(model => model.TenNV, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.TenNV, new { @class = "form-control", @readonly = "readonly", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaVaiTro, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.MaVaiTro, "ADMIN")
                    Admin
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.MaVaiTro, "USER")
                    User
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.MaVaiTro, "BLOCK")
                    Block
                </label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChucVu, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.ChucVu, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MucLuong, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.MucLuong, new { @class = "form-control", type = "number", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", rows = "5", cols = "20" })
            </div>
        </div>

        <div class="modal-footer">
            <div class="clearfix text-right">
                <button type="submit" class="btn bg-maroon btn-lg">Cập nhật</button>
                @Html.ActionLink("Đóng", "Index", null, new { @class = "btn btn-default btn-lg", onclick = "return confirm('Các thay đổi sẽ không được cập nhật. Bạn vẫn muốn trở về danh sách?');" })
            </div>
        </div>
    </div>
}
