@model Model.EF.NhanVien

@{
    Layout = null;
}

@using (Html.BeginForm("ThemMoi", "NhanVien", FormMethod.Post, new { enctype = "multipart/form-data"}))
{

    <div class="modal-header bg-olive">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Thêm nhân viên mới</h4>
    </div>

    <div class="modal-body form-horizontal">

        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            <input type="file" name="FileAnh" required />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenNV, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.TenNV, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.GioiTinh, "Nam", new { required = "required" })
                                Nam
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.GioiTinh, "Nữ")
                                Nữ
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.GioiTinh, "Khác")
                                Khác
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            <div class=" input-group date" id="datetimepicker1">
                                @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control" , required = "required" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SoCMND, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.SoCMND, new { @class = "form-control", type = "number" , required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SoDT, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.SoDT, new { @class = "form-control", type = "number" , required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" , required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" , required = "required" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ChucVu, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ChucVu, new { @class = "form-control" , required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MucLuong, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.MucLuong, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaVaiTro, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.MaVaiTro, "ADMIN", new { required = "required" })
                                Admin
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.MaVaiTro, "USER")
                                User
                            </label>
                            @Html.ValidationMessageFor(model => model.MaVaiTro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", rows = "5", cols = "20" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn bg-olive btn-lg">Thêm Mới</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>
