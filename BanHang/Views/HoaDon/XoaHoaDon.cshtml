@model Model.EF.HoaDon

@{
    Layout = null;
}

@using (Html.BeginForm("XoaHoaDon", "HoaDon", FormMethod.Post))
{
    <div class="modal-header bg-navy">
        <h4 class="modal-title">Xóa hóa đơn</h4>
    </div>

    <div class="modal-body">
        <!-- form start -->
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @style = "color: red" })
        @Html.HiddenFor(model => model.MaHD)
        <h4>Bạn có chắc muốn xoá hóa đơn này?</h4>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-lg bg-navy">Xóa</button>
    </div>
}