
<section class="sidebar">
    <!-- Sidebar user panel (optional) -->
    @{
        var session = (Model.EF.NhanVien)Session[BanHang.Common.CommonConstant.USER_SESSION];
    }
    @if (session != null)
    {
        <div class="user-panel">
            <div class="pull-left image">
                <img width="75" height="75" src="~/Image/NhanVien/@session.HinhAnh" class="img-circle" alt="@session.TenNV">
            </div>
            <div class="pull-left info">
                <p>@session.TenNV</p>
                <a href="@Url.Action("Index","Home")"><i class="fa fa-circle text-success"></i> @session.TaiKhoan</a>
            </div>
        </div>
    }

    <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">NHÂN VIÊN</li>
            <!-- Optionally, you can add icons to the links -->
            <li>
                <a href="@Url.Action("Index","BanHang")">
                    <i class="fa fa-shopping-cart"></i> <span>Bán Hàng</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("ThanhToan","BanHang",session)">
                    <i class="fa fa-dollar"></i> <span>Thanh toán</span>
                </a>
            </li>
            <li id="orders">
                <a href="@Url.Action("Index","HoaDon")">
                    <i class="fa fa-book"></i>
                    <span>Hóa Đơn</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("ThemMoi","SanPham")">
                    <i class="fa fa-plus"></i> <span>Thêm Sản Phẩm</span>
                </a>
            </li>
            <li id="products">
                <a href="@Url.Action("Index","SanPham")">
                    <i class="fa fa-shopping-basket"></i>
                    <span>Sản Phẩm</span>
                </a>
            </li>

            <li id="customers">
                <a href="@Url.Action("Index","KhachHang")">
                    <i class="fa fa-users"></i> <span>Khách Hàng</span>
                </a>
            </li>
            <li class="header">QUẢN LÝ</li>
            <li id="customers">
                <a href="@Url.Action("Index","NhanVien")">
                    <i class="fa fa-user"></i> <span>Nhân Viên</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","NhaCungCap")">
                    <i class="fa fa-user-secret"></i> <span>Nhà Cung Cấp</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","LoaiSanPham")">
                    <i class="fa fa-cubes"></i> <span>Phân Loại Sản Phẩm</span>
                </a>
            </li>
            <li class="header">QUẢN LÝ CÁ NHÂN</li>
            <li>
                <a href="@Url.Action("Index","ThongTinCaNhan", session)">
                    <i class="fa fa-user"></i> <span>Hồ Sơ Cá Nhân</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Logout","Login")" onclick="return confirm('Bạn đang tiến hành đăng xuất khỏi tài khoản');">
                    <i class="fa fa-sign-out"></i> <span>Đăng xuất</span>
                </a>
            </li>

        </ul>
    <!-- /.sidebar-menu -->
</section>



