<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Ministop</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Assets/AdminLTE-2.4.18/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/AdminLTE-2.4.18/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Assets/AdminLTE-2.4.18/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Assets/AdminLTE-2.4.18/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Assets/AdminLTE-2.4.18/dist/css/skins/skin-blue.min.css">
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Action("Index","Home")" class="logo">
                <span class="logo-mini"><b>H</b>N</span>
                <span class="logo-lg"><b>Ministop</span>
            </a>
            <nav class="navbar navbar-static-top position-relative" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"></a>
            </nav>

        </header>
        <aside class="main-sidebar">
            @Html.Partial("_SidebarParial")
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="AlertBox" class="alert @TempData["AlertType"]">
                        @TempData["AlertMessage"]
                    </div>
                }
                @RenderBody()
            </section>
            <section class="content container-fluid"></section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="https://www.facebook.com/vqhuyz" target="_blank">Vũ Quốc Huy</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="~/Assets/AdminLTE-2.4.18/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Assets/AdminLTE-2.4.18/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Assets/AdminLTE-2.4.18/dist/js/adminlte.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(1500).slideUp(500);
    </script>
</body>
</html> 