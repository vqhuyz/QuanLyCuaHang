@model Model.EF.SanPham

@{
    ViewBag.Title = "Cập nhật thông tin sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1 class="page-header">
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Tác vụ</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("CapNhat", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box">
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.MaSP)
                    <div class="col-md-12 text-center">
                        <p>
                            <img src="~/Image/SanPham/@Model.HinhAnh" width="200" height="200" />
                        </p>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <br />
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.TenSP)</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.TenSP, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <br />
                        @*<div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.MaLoaiSP)</div>
                            <div class="col-md-10">
                                @Html.DropDownList("MaLoaiSP", null, "-- Chọn loại sản phẩm --", htmlAttributes: new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.MaNCC)</div>
                            <div class="col-md-10">
                                @Html.DropDownList("MaNCC", null, "-- Chọn nhà cung cấp --", htmlAttributes: new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <br />*@
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.ThuongHieu)</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.ThuongHieu, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.GiaNhap)</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.GiaNhap, new { @class = "form-control", type = "number", required = "required" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.GiaBan)</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.GiaBan, new { @class = "form-control", type = "number", required = "required"  })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.SoLuong)</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.SoLuong, new { type = "number", min = "0", step = "1", @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2 text-right">@Html.DisplayNameFor(model => model.Mota)</div>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Mota, new { @class = "form-control", id = "txtMota" })
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
                <div class="box-footer clearfix text-right">
                    <button type="submit" class="btn bg-blue btn-sm"> Lưu</button>
                    @Html.ActionLink("Về danh sách", "Index", null, new { @class = "btn btn-default btn-sm", onclick = "return confirm('Các thay đổi sẽ không được cập nhật. Bạn vẫn muốn trở về danh sách?');" })
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Assets/AdminLTE-2.4.18/bower_components/ckeditor/ckeditor.js"></script>
<script>
    var ckeditor = CKEDITOR.replace('txtMota', {
        customConfig: "~/Assets/AdminLTE-2.4.18/bower_components/ckeditor/config.js"
    });
</script>