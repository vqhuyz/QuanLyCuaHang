@model PagedList.IPagedList<Model.EF.LoaiSanPham>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách phân loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1 class="page-header">
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Tác vụ</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div>
                    <a href="/LoaiSanPham/ThemMoi" class="btn bg-olive btn-lg" data-toggle="modal" data-target="#modal-themMoi" data-backdrop="static" data-keyboard="false">
                        Thêm Mới
                    </a>
                    <div class="modal fade " id="modal-themMoi">
                        <div class="modal-dialog">
                            <div class="modal-content">
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="background-color:#80d6ff; font-size : 15px; text-align: center">Tên phân loại</th>
                            <th style="background-color:#80d6ff; font-size : 15px; text-align: center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="padding-top: 12px; text-align: center">@item.TenLoai</td>
                                <td class="text-center">
                                    <a href="/LoaiSanPham/CapNhat/@item.MaLoaiSP" class="btn bg-maroon" style="border-radius:15px" data-toggle="modal" data-target="#modal-capNhat-@item.MaLoaiSP" data-backdrop="static" data-keyboard="false">Sửa</a>
                                    <div class="modal fade " id="modal-capNhat-@item.MaLoaiSP">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                            </div>
                                        </div>
                                    </div>
                                    <a href="/LoaiSanPham/Xoa/@item.MaLoaiSP" class="btn bg-navy" style="border-radius:15px" data-toggle="modal" data-target="#modal-Xoa-@item.MaLoaiSP">Xóa</a>
                                    <div class="modal fade " id="modal-Xoa-@item.MaLoaiSP">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
